<div data-controller="webrtc" class="container mt-4">
  <div class="row">
    <div class="col d-flex flex-column align-items-center">
      <div class="col bg-primary text-white text-center mb-4">Local Video</div>
      <video height="240" data-target="webrtc.main" autoplay playsinline muted></video>
    </div>
    <div class="col d-flex flex-column align-items-center">
      <div class="col bg-dark text-white text-center mb-4">Remote Video</div>
      <video height="240" data-target="webrtc.remote" autoplay playsinline></video>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col">
      <button data-action="webrtc#getUserMedia" class="btn btn-light">Get Video</button>
      <button data-action="webrtc#joinRoom" class="btn btn-light ml-4">Join Room</button>
      <button data-action="webrtc#toggleMute" data-target="webrtc.mute" class="btn btn-light ml-4">Mute/Unmute</button>
    </div>
  </div>
</div>